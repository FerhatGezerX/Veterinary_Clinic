@model VeterinaryClinic.Models.Treatment
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Management/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="TreatmentName" class="control-label"></label>
                <input asp-for="TreatmentName" class="form-control" />
                <span asp-validation-for="TreatmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TreatmentDate" class="control-label"></label>
                <textarea asp-for="TreatmentDate" class="form-control"></textarea>
                <span asp-validation-for="TreatmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

