@model VeterinaryClinic.Models.Appointment
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Management/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Appointment</h4>
        <hr />
